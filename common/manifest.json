{
	"name": "Glitch Ad Blocker",
	"version": "0.1.0",
	"description": "Block ads on Twitch",
	"manifest_version": 2,
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["*://www.twitch.tv/*", "*://player.twitch.tv/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"*://*.twitch.tv/*",
		"*://*.ttvnw.net/*",
		"webRequest",
		"webRequestBlocking"
	]
}
